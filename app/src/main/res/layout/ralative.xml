<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <Button

        android:text="Button"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:id="@+id/button13"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_below="@id/button13"
        android:layout_alignRight="@id/button13"
        android:layout_toLeftOf="@id/button13"
        android:layout_alignTop="@id/button13"
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button18" />

    <Button
        android:layout_toRightOf="@id/button13"
        android:layout_alignBottom="@id/button13"
        android:layout_toLeftOf="@id/button13"
        android:layout_alignBaseline="@id/button13"

        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button17" />

    <Button
        android:layout_toLeftOf="@id/button13"
        android:layout_alignBottom="@id/button13"
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button16" />

    <Button
        android:layout_above="@id/button13"
        android:layout_alignLeft="@id/button13"
        android:text="Button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button15" />

    <Button
        android:layout_above="@id/button13"
        android:layout_toRightOf="@id/button13"
        android:text="Button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button14" />


    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button16"
        android:layout_toEndOf="@+id/button13"
        android:id="@+id/button19" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button13"
        android:layout_toEndOf="@+id/button15"
        android:layout_marginStart="20dp"
        android:id="@+id/button20" />
</RelativeLayout>