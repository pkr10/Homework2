<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="com.example.rok.myapplication.Main5Activity">

    <TextView
        android:background="@drawable/asdasd"
        android:textColor="#f7f3f3"
        android:text="ffffff"
        android:textSize="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ct1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="정수 입력"
        android:ems="10"
        android:id="@+id/ce1" />

    <TextView
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="#020202"
        android:text="asdsad 2"
        android:textSize="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ct2" />

    <EditText
        android:layout_marginBottom="10dp"
        android:background="#9b2121"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="정수 입력"
        android:ems="10"
        android:id="@+id/ce2" />

    <Button
        android:text="더하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cb1" />

    <Button
        android:text="빼기"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cb2" />

    <Button
        android:text="곱하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cb3" />

    <Button
        android:text="나누기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cb4" />

</LinearLayout>
